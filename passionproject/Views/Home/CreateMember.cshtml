@using passionproject.Itinerary
@model Member
@{
    ViewData["Title"] = "Create New Member";
}

<div class="container">
    <h1>Create New Member</h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="CreateMember">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DietaryRestrictions" class="control-label">Dietary Restrictions</label>
                    <input asp-for="DietaryRestrictions" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HealthConsiderations" class="control-label">Health Considerations</label>
                    <textarea asp-for="HealthConsiderations" class="form-control"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EmergencyContact" class="control-label">Emergency Contact</label>
                    <input asp-for="EmergencyContact" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="ActivityDetails" asp-route-id="@ViewBag.ActivityId" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>