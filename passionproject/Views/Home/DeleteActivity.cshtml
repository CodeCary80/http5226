@model passionproject.Itinerary.Activity

@{
    ViewData["Title"] = "Delete Activity";
}

<h1>Delete Activity</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this activity?</h3>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.DateTime.ToString("g")</h6>
        <p class="card-text">@Model.Description</p>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Cost:</strong> $@Model.Cost</p>

        <form asp-action="DeleteActivity">
            <input type="hidden" asp-for="ActivityId" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="DestinationDetails" asp-route-id="@Model.DestinationId" class="btn btn-secondary">Back to Destination</a>
        </form>
    </div>
</div>